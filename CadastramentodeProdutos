//Aplicação de funções, para encadeamento.
//Criação de um for para cada informação a ser chamada na aba "Mostrar cadastro".
//Ler string.h e funções 1
#include <stdio.h>
#include <locale.h>
#include <conio.h>
#include <stdlib.h>
#include <string.h>

//Funções Globais
void ExcluirProd(void);
void CadastroProduto(void);
void ListaProd(void);
void AlteraProd(void); 

//CadastroProduto  - Variáveis 
int MenuMain;
char NomeProd[60];
float ValorProd;
int QtdProd;
int TabelaProdutos;

void CadastroProduto(void) {
//Função para cadastrar um novo produto.
	int RespTabela;
	setlocale(LC_ALL, "Portuguese");
	puts("Digite o nome do produto: ");
	scanf_s("%s", &NomeProd, 60);
	puts("Digite o valor do produto: ");
	scanf_s("%f", &ValorProd);
	puts("Digite a quantidade do produto: ");
	scanf_s("%d", &QtdProd);
	puts("Você deseja ir a tabela de produtos?\n(1) Sim.\n(2) Não.\n");
	scanf_s("%d", &RespTabela);
	if (RespTabela == 1 ) {
		ListaProd();
	}else {
		puts("Você está saindo do programa!");
	}

}

void ListaProd(void) {
//Função para listar todos os produtos, pretendo buscar a função anterior e colocá-la aqui.
//Fazer essa função por último, pois, irei linkar todas as demais funções a está.
	printf("**********PRODUTDOS**********");
	for (int l = 0; l < 5; l++) {
		for (int c = 0; c < 3; c++) {
			printf ("\n%s\n", NomeProd);
		}
		}
	system("pause");
}

void AlteraProd(void) {
//Função para alterar os valores do produto.
//Neste algoritmo vou usar ponteiro, para uma variável local apontar para a global.
	setlocale(LC_ALL, "Portuguese");
}
int main() {
//Irei linkar todas as funções que irei criar e colocá-las alocadas na função principal, junto do switch-case.
	int MenuMain;
	setlocale(LC_ALL, "Portuguese");

	puts("*******MENU*******\n");
	puts(" 1 - Cadastro de produto.\n 2 - Listar produtos. \n 3 - Alterar o cadastro de um produto. \n 4 - Excluir o cadastro de um produto.\n 5 - Sair.\n");
	scanf_s("%d", &MenuMain);
	switch (MenuMain){
	case 1: 
		CadastroProduto();
		break; 
	case 2:
		ListaProd();
		break;
	case 3:
		AlteraProd();
		break;
	case 4:
		ExcluirProd();
		break;
	default:
		printf("Você está saindo do programa.\n");
		system("pause");
	}

}

void ExcluirProd(void) {
//Função para excluir cadastro de um produto.
//Neste algoritmo vou usar ponteiro, para uma variável local apontar para a global.
	setlocale(LC_ALL, "Portuguese");

}
